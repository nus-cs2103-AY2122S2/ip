<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308"
         maxWidth="1.7976931348623157E308" minHeight="50.0" onMouseClicked="#handleClick" prefHeight="50.0"
         style="-fx-background-color: #393E46; -fx-border-radius: 5; -fx-background-radius: 5;" type="HBox"
         xmlns="http://javafx.com/javafx/17">
   <children>
      <RadioButton fx:id="markButton" mnemonicParsing="false" onAction="#handleMark"/>
      <Text fx:id="taskText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0">
         <font>
            <Font size="16.0"/>
         </font>
         <HBox.margin>
            <Insets left="10.0"/>
         </HBox.margin>
      </Text>
      <HBox prefHeight="50.0" prefWidth="0.0" HBox.hgrow="ALWAYS"/>
      <Button fx:id="deleteButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
              onAction="#handleDelete" style="-fx-background-color: #EEEEEE;" text="Delete"/>
   </children>
   <opaqueInsets>
      <Insets/>
   </opaqueInsets>
   <padding>
      <Insets left="10.0" right="10.0"/>
   </padding>
</fx:root>
